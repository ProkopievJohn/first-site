.news
	z-index 10
	position absolute
	top 0
	left 0
	width 100%
	height 100vh
	overflow hidden
	.next, .prev
		z-index 10
		display block
		width 100px
		line-height 60vh
		position absolute
		text-align center
		text-transform uppercase
		top 50%
		transform: translate(0,-50%);
		cursor pointer
		background-color: hsla(0, 0%, 60%, 0.2)
		transition: all 0.2s;
		&:hover
			background-color: hsla(0, 0%, 60%, 0.5)
	.next
		right 0
	.prev
		left 0
	.item
		position absolute
		top 0
		bottom 0
		width 100%
		height 100vh
		text-align: center;
	.inner-item
		width 80%
		position relative
		top 50%
		left 50%
		transform: translate(-50%,-50%);
	.image
		display inline-block
		width 10%
		img
			width 100%
	.read-more
		padding 15px
		border: 1px solid #888
		&:hover
			border: 1px solid #e6e6e6
	h4
		font-size: 1.4rem
		margin 15px
	p
		margin 15px
			