.about
	width 80%
	position absolute
	top 50%
	left 50%
	transform translate(-50%,-50%)
	.about-img
		float left
		width 40%
		img
			width 100%
			opacity: 0.4
			border: 2vh solid hsla(0, 0%, 60%, 0.2)
	.about-text
		position absolute
		top 50%
		right 0
		transform translate(0,-50%)
		float right
		width 50%
		img
			width 30%
	h1
		font-weight 100
		font-size 2rem
		margin 20px 0
		text-transform uppercase
	p
		text-indent 1rem
		line-height 1.4rem
		margin 10px